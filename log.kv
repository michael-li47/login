WindowManager:
    Login:
    AccountCreation:
    Profile:

<Login>:
    name: "login"

    username: user
    password: pasw

    GridLayout:
        cols: 2

        Label:
            text: "Username:"

        TextInput:
            id: user
            multiline: False

        Label:
            text: "Password:"

        TextInput:
            id: pasw
            multiline: False

        Button:
            size_hint: 1, 0.5
            text: "Submit"
            on_release:
                root.checkLoginInfo()
                root.manager.transition.direction = "up"

        Button:
            size_hint: 1, 0.5
            text: "Create an Account"
            on_release:
                app.root.current = "acct"
                root.manager.transition.direction = "left"

<AccountCreation>:
    name: "acct"

    given_name: name
    username: user
    email: email
    password: pasw
    re_enter_password: re_pas

    GridLayout:
        cols: 2

        Label:
            text: "Given Name:"

        TextInput:
            id: name
            multiline: False

        Label:
            text: "Username:"

        TextInput:
            id: user
            multiline: False

        Label:
            text: "Email:"

        TextInput:
            id: email
            multiline: False

        Label:
            text: "Password:"

        TextInput:
            id: pasw
            multiline: False

        Label:
            text: "Re-Enter Password:"

        TextInput:
            id: re_pas
            multiline: False

        Button:
            size_hint: 1, 0.5
            text: "Submit"
            on_release:
                root.validInfo()
                root.manager.transition.direction = "right"

        Button:
            size_hint: 1, 0.5
            text: "Back"
            on_release:
                root.backButton()
                root.manager.transition.direction = "right"

<Profile>:
    name: "prof"
    username: user
    n: n
    email: email
    password: pasw

    FloatLayout:
        Label:
            id: user
            pos_hint:{"x": 0.1, "top":0.9}
            size_hint:0.8, 0.2
            text: "Account Name: "

        Label:
            id: n
            pos_hint:{"x": 0.1, "top":0.7}
            size_hint:0.8, 0.2
            text: "Given Name: "

        Label:
            id: email
            pos_hint:{"x": 0.1, "top":0.5}
            size_hint:0.8, 0.2
            text: "Email: "

        Label:
            id: pasw
            pos_hint:{"x": 0.1, "top":0.3}
            size_hint:0.8, 0.2
            text: "Password: "

        Button:
            size_hint: 0.3, 0.1
            pos_hint: {"x": 0.35, "bottom": 0.1}
            text: "Edit Profile"

        Button:
            size_hint: 0.2, 0.1
            pos_hint: {"bottom": 0, "right": 1}
            text: "Log Out"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"
